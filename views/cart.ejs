<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Cart</title>
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">
  <h2>Cart</h2>

  <% if(order.Servants.length === 0) { %>
    <p>Cart kosong</p>
  <% } else { %>
    <table class="table">
      <thead>
        <tr>
          <th>Servant</th>
          <th>Harga</th>
          <th>Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% order.Servants.forEach(s => { %>
          <tr>
            <td><%= s.name %></td>
            <td>Rp <%= s.price %></td>
            <td>
              <a href="/cart/remove/<%= s.id %>" class="btn btn-danger btn-sm">Hapus</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <p><strong>Total:</strong> Rp <%= order.Servants.reduce((acc, s) => acc + s.price, 0) %></p>
    <a href="/cart/checkout" class="btn btn-success">Checkout</a>
  <% } %>

  <a href="/store" class="btn btn-link">Kembali ke Store</a>
</body>
</html>
